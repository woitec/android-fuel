<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fuelAmount"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text=""
        android:layout_gravity="start"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text=""
        android:layout_gravity="start"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text=""
        android:layout_gravity="start"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/kilometersDifference"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text=""
        android:layout_gravity="start"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/fuelType"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text=""
        android:layout_gravity="start"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text=""
        android:layout_gravity="start"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text=""
        android:layout_gravity="start"
        android:textSize="10dp" />
</LinearLayout>